<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafxproject.LogonController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <VBox alignment="CENTER" spacing="20.0">
        <Label text="LOGON CLIENTE" style="-fx-font-weight: bold"/>

        <Label text="Coloque suas credenciais" />
    </VBox>


    <Label text="Nome" />
    <TextField fx:id="nameTextField"/>

    <Label text="Email"/>
    <TextField fx:id="emailTextField"/>

    <Label text="Telefone" />
    <TextField fx:id="phoneTextField"/>

    <CheckBox text="Aceito e li todos os termos de contratuais" fx:id="checkBoxId"/>

    <VBox alignment="CENTER_RIGHT">
        <Label text="" fx:id="errorLabel" textFill="red" style=" -fx-font-weight: bold"/>
    </VBox>
    <VBox alignment="CENTER_RIGHT">
        <Button fx:id="buttonCadastroId" onAction="#onActionCadastrar" text="Cadastrar!" style="-fx-background-color: BlueViolet; -fx-font-weight: bold "  textFill="aliceblue"/>
    </VBox>

</VBox>


